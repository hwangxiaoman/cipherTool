<!DOCTYPE html>
<html>
<head>
  <title>Login | Micha's Coffee Shop</title>
  <style>
    body{
      background-color: #DBC2AD;
      display: flex;
      justify-content: center;
      overflow-x: hidden;
      overflow-y: hidden;
    }
    .main-container{
      padding: 0;
      margin: 8rem;
      height: 40rem;
      width: 60rem;
      background-color: #b9b9b9;
      display: flex;
      flex-direction: row;
    }
    .main-container > .sub-container{
      width: 60%;
      height: 100%;
      background-color: #A18167;
    }
    .main-container > form{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background-color: #ffffff;
      width: 40%;
  
    }
    form > h2{
      color: #A18167;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 2.5rem;
      font-weight: 700;

    }
    form > .input-fields{
      padding: 0.5rem;
      display: flex;
      flex-direction: column;
    }
    form > .input-fields > label{
      font-family: Arial, Helvetica, sans-serif;
      padding-bottom: 0.5rem;
      color: #A18167;

    }
    form > .input-fields > input{
      height: 2.5rem;
      width: 18rem;
      border-radius: 0.5rem;
      padding: 0.1rem;
      font-family: Arial, Helvetica, sans-serif;
      text-indent: 0.5rem;
      font-size: 1rem;
      border: 0.1rem #A18167 solid;
    }
    form > #submitBtn{
      margin-top: 2.5rem;
      width: 18rem;
      height: 3.5rem;
      border-radius: 0.5rem;
      border: none;
      background-color: #A18167;
      cursor: pointer;
      color: #ffffff;
      font-size: 1rem;
      font-weight: 600;
    }
    form > .input-fields > input:focus{
      border: none;
      outline: #A18167 2px solid;
    }
    form > span{
      margin-top: 1rem;
      font-family: Arial, Helvetica, sans-serif;
      color: #A18167;
    }
    form > span > a{
      margin-left: 0.5rem;
      font-family: Arial, Helvetica, sans-serif;
      color: #A18167;
    }
  </style>
</head>
<body>
  <div class="main-container">
    <div class="sub-container">
    </div>
    <form action="/login" method="post">
      <h2>Sign in</h2>
      <% if (typeof errorMessage !== 'undefined') { %>
        <p style="
        border-radius: 0.5rem;
        padding: 1rem 2.5rem;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 1rem;
        background-color: #ffc6c6;
        color: #7a3636;
        text-align: center;"><%= errorMessage %></p>
        <% } %>

        <% if (typeof message !== 'undefined') { %>
          <p style="
          border-radius: 0.5rem;
          padding: 1rem 3rem;
          font-family: Arial, Helvetica, sans-serif;
          font-size: 1rem;
          background-color: #bdf7c7;
          color: #34693d;
          text-align: center;"><%= message %></p>
        <% } %>
      <div class="input-fields">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="input-fields">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <input type="submit" value="Login" id="submitBtn">
      <span>Don't have an account yet?<a href="/register">Sign up!</a></span>
    </form>
  </div>
</body>
</html>
